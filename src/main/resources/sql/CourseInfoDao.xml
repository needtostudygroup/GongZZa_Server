<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
<mapper namespace="com.needtostudy.gongzza.daos.CourseInfoDao">

    <sql id="column">
        id,
        course_id   courseId,
        start_time  startTime,
        end_time    endTime,
        day
    </sql>

    <insert id="insertCourseInfo">
        <selectKey resultType="Integer" keyProperty="id" order="BEFORE">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO tbl_course_infos
        VALUES (
            #{id},
            #{courseId},
            #{startTime},
            #{endTime},
            #{day}
        )
    </insert>

    <update id="updateCourseInfo">
        UPDATE tbl_course_infos
        SET
            start_time = #{startTime},
            end_time = #{endTime},
            day = #{day}
    </update>

    <delete id="deleteCourseInfo">
        DELETE FROM tbl_course_infos
        WHERE id = #{id}
    </delete>

    <select id="selectCourseInfoById" resultType="CourseInfo">
        SELECT <include refid="column"/>
        FROM tbl_course_infos
        WHERE id = #{id}
    </select>

    <select id="selectCourseInfoListByCourseId" resultType="CourseInfo">
        SELECT <include refid="column"/>
        FROM tbl_course_infos
        WHERE courseId = #{courseId}
    </select>

</mapper>
