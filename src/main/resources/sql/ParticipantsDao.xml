<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
<mapper namespace="com.needtostudy.gongzza.daos.ParticipantsDao">

    <sql id="column">
        <include refid="com.needtostudy.gongzza.daos.UserDao.column"/>,
        post_id     postId
    </sql>

    <insert id="insertParticipant" parameterType="Participant">
        INSERT INTO tbl_participants
        VALUES (
            user_id = #{id},
            post_id = #{postId}
        )
    </insert>

    <delete id="deleteParticipant">
        DELETE FROM tbl_participants
        WHERE user_id = #{id}
        AND post_id = #{postId}
    </delete>

    <select id="selectParticipantListByPostId" resultType="Participant">
        SELECT <include refid="column"/>
        FROM tbl_participants
        WHERE post_id = #{postId}
    </select>

</mapper>
