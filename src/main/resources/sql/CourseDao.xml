<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
<mapper namespace="com.needtostudy.gongzza.daos.CourseDao">

    <resultMap id="CourseDto" type="CourseDto">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="name" property="name"/>
        <result column="professor" property="professor"/>
        <collection property="courseInfoList" column="{courseId = id}" select="com.needtostudy.gongzza.daos.CourseInfoDao.selectCourseInfoByCourseId"/>
    </resultMap>
    
    <sql id="column">
        id,
        user_id     userId,
        name,
        professor
    </sql>

    <insert id="insertCourse" parameterType="Course">
        <selectKey resultType="Integer" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO tbl_courses
        VALUES (
            #{id},
            #{userId},
            #{name},
            #{professor}
        )
    </insert>

    <update id="updateCourse">
        UPDATE tbl_courses
        SET
            name = #{name},
            professor = #{professor}
        WHERE id = #{id}
    </update>

    <delete id="deleteCourse">
        DELETE FROM tbl_courses
        WHERE id = #{id}
    </delete>

    <select id="selectCourseById" resultType="Course">
        SELECT <include refid="column"/>
        FROM tbl_courses
        WHERE id = #{id}
    </select>

    <select id="selectCourseListByUserId" resultMap="CourseDto">
        SELECT <include refid="column"/>
        FROM tbl_courses
        WHERE user_id = #{userId}
    </select>

</mapper>
